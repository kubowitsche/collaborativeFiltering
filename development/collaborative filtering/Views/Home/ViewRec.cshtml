@{
    ViewBag.Title = "View Recommendations!";
}
<h2 >@ViewBag.Title</h2>
@model collaborative_filtering.Models.ReviewItem
<div id="recommendation" class="row">
    <h3>We Recommend...</h3>
    <h4>@Html.ValueFor(r => Model.Name)</h4>
    <p>@Html.ValueFor(r => Model.Description)</p>
    <p>We're @Html.ValueFor(r => Model.recommendation.EstimatedRating) sure you'll like this</p>
</div>
<div class="row">
    <p class="btn btn-default">@Html.ActionLink("Generate a new recommendation", "ViewRec")</p>
</div>